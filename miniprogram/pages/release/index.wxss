/* miniprogram/pages/release/index.wxss *//* pages/release/index.wxss */
.form-page {
  padding: 30rpx;
}
.title-input {
  margin: 20rpx 0 30rpx 0;
}
.text-textarea {
  width: 100%;
  height: 250rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.sub-btn {
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;

}
.btn {
  width: 90%;
  height: 80rpx;
  background-color: red;
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  border-radius: 50rpx;
  position: fixed;
  bottom: 20rpx;
}

.line {
  border-bottom: 1rpx solid #efefef;
}
button[type='warn'] {
  color: #f2f2f2 !important;
  background-color: #fa5151 !important;
}
.form-content {
  width: 100%;
  box-sizing: border-box;
}